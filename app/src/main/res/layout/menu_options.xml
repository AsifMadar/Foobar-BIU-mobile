<!-- friend_menu_options.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <!-- Watch Profile Option -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="8dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_seeprofile"
            android:layout_marginEnd="8dp"/>

        <TextView
            android:id="@+id/watchProfileText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Watch Profile"
            android:textSize="16sp"
            android:textColor="@android:color/black"/>
    </LinearLayout>

    <!-- Remove Friend Option -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="8dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_unfriend"
            android:layout_marginEnd="8dp"/>

        <TextView
            android:id="@+id/removeFriendText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Remove Friend"
            android:textSize="16sp"
            android:textColor="@android:color/black"/>
    </LinearLayout>

</LinearLayout>
