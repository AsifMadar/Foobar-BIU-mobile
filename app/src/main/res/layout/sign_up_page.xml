<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:gravity="center"
        style="@style/SCREEN"
        tools:context=".SignUpPageActivity">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sign_up"
            android:textSize="35sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp"
            android:background="#5C73F4"
            android:padding="20dp"
            android:textColor="#FFFFFF"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/username"
            android:textSize="18sp"
            style="@style/TEXT"
            android:textStyle="bold"
            android:layout_marginBottom="16dp"/>

        <EditText
            android:id="@+id/usernameEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/username_hint"
            android:padding="18dp"
            android:textColor="#000000"
            android:textColorHint="#9FA3A3"
            android:textSize="14sp"
            android:layout_marginBottom="16dp"/>

        <TextView
            style="@style/TEXT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/password"

            android:textSize="18sp"
            android:textStyle="bold"/>

        <EditText

            android:id="@+id/passwordEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/password_hint"
            android:inputType="textPassword"
            android:padding="18dp"
            android:textSize="14sp"
            android:textColorHint="#9FA3A3"
            android:textColor="#000000"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/retype_password"
            style="@style/TEXT"
            android:textSize="18sp"
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/rePasswordEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/retypePassword_hint"
            android:inputType="textPassword"
            android:padding="18dp"
            android:textSize="14sp"
            android:textColorHint="#9FA3A3"
            android:textColor="#000000"
            android:layout_marginBottom="16dp"/>

        <TextView
            style="@style/TEXT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/display_name"
            android:textSize="18sp"
            android:textStyle="bold"/>

        <EditText

            android:id="@+id/displayNameEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/display_name_hint"
            android:padding="18dp"
            android:textSize="14sp"
            android:textColorHint="#9FA3A3"
            android:textColor="#000000"
            android:layout_marginBottom="20dp"/>
        <TextView
            style="@style/TEXT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/profile_picture_must"
            android:textSize="18sp"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/imgButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:paddingLeft="5dp"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:paddingEnd="20dp"
            android:paddingStart="20dp"
            android:backgroundTint="#5D6BBA"
            android:text="@string/take_photo"/>

        <ImageView
            android:id="@+id/profilePic"
            android:layout_width="match_parent"
            android:layout_height="500dp"
            android:layout_marginTop="16dp"
            android:scaleType="centerCrop"
            android:background="#E0E0E0"
            android:visibility="gone"
            android:contentDescription="@string/take_photo"/>

        <Button
            android:id="@+id/feedActivity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#475395"
            android:padding="12dp"
            android:paddingStart="40dp"
            android:paddingEnd="40dp"
            android:text="@string/sign_up"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />

        <Button
            android:id="@+id/signInActivity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#354551"
            android:padding="12dp"
            android:paddingStart="40dp"
            android:paddingEnd="40dp"
            android:text="Sign in"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />

    </LinearLayout>
</ScrollView>
